  <!-- SCRIPT -->
  <script>
    const openBtn = document.getElementById('open-menu');
    const closeBtn = document.getElementById('close-menu');
    const overlay = document.getElementById('menu-overlay');
    const links = document.querySelectorAll('.overlay-link');
  
    openBtn.addEventListener('click', () => {
      overlay.classList.remove('hidden');
      setTimeout(() => overlay.classList.add('opacity-100'), 10);
  
      // Animation d’apparition progressive
      links.forEach((link, i) => {
        setTimeout(() => {
          link.classList.remove('opacity-0', 'translate-y-6');
        }, 150 * i);
      });
    });
  
    closeBtn.addEventListener('click', () => {
      overlay.classList.remove('opacity-100');
      links.forEach(link => link.classList.add('opacity-0', 'translate-y-6'));
      setTimeout(() => overlay.classList.add('hidden'), 500);
    });
  
    // Ferme aussi le menu quand on clique sur un lien
    links.forEach(link => link.addEventListener('click', () => {
      closeBtn.click();
    }));
  </script>
  